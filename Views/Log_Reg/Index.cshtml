@{
    ViewData["Title"] = "Porsche - Sign-in/Up";
    Layout = "_Layout(Header)";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Log-Reg.css" asp-append-version="true" />
</head>
<body>
   <div class="Container">
       <!-- Image -->
       <div class="CContainer">
            <img src="~/images/Log-Reg/Logo2.png" alt="Logo" class="logoimg">
       </div>
       <div class="Containerlogin">
            <!-- First Name -->
            <div class="FirstName">
                <div class="field">
                    <input id="FirstName" placeholder="First Name">
                    @* @Html.TextBoxFor(m => m.Description, new { @placeholder = "Description", @required = "required", @maxlength = "200" })  *@
                    <div class="line"></div>
                </div>
            </div>
            <!-- Last Name -->
            <div class="LastName">
                <div class="field">
                    <input id="LastName" placeholder="Last Name">
                    @* @Html.TextBoxFor(m => m.Description, new { @placeholder = "Description", @required = "required", @maxlength = "200" })  *@
                    <div class="line"></div>
                </div>
            </div>
            <!-- email -->
            <div class="Email">
                <div class="field">
                    <input id="Email" placeholder="Example@mail.com">
                    @* @Html.TextBoxFor(m => m.Description, new { @placeholder = "Description", @required = "required", @maxlength = "200" })  *@
                    <div class="line"></div>
                </div>
            </div>
            <!-- password -->
            <div class="Password">
                <div class="field">
                    <input type="Password" id="passwordInput" placeholder="Enter password">
                    @* @Html.TextBoxFor(m => m.Event_Id, new { @type = "number", @placeholder = "EventID  ", @required = "required", @maxlength = "10" }) *@
                    <div class="line"></div>
                    <img src="~/images/hide icon inverted.png" class="hideicon" onclick="pass()" id="hide_icon">
                </div>
            </div>
            <!-- BirthDay -->
            <div class="BD">
                <p class="birth">
                    @* @Html.TextBoxFor(m => m.Birth_Date, new { @type = "date", @class = "birthdate", @placeholder = "Birthdate", @required = "required" }) *@
                    <input type="date" id="Birth_Date" name="Birth_Date" class="birthdate" placeholder="Birthdate" required>
                </p>
            </div>
            <!-- password confirm -->
            <div class="Password2">
                <div class="field">
                    <input type="Password" id="passwordInput" placeholder="Confirm password">
                    @* @Html.TextBoxFor(m => m.Event_Id, new { @type = "number", @placeholder = "EventID  ", @required = "required", @maxlength = "10" }) *@
                    <div class="line"></div>
                    <img src="~/images/hide icon inverted.png" class="hideicon" onclick="pass()" id="hide_icon">
                </div>
            </div>
       </div>
       <!-- Submit -->
        <div class="BContainer">
                <button class="submitionbutton" role="button">Register</button>
        </div>
   </div>
   <script type="text/javascript" src="~/js/Log-Reg.js"></script>
</body>